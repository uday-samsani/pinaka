---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import ProfileImg from "../../assets/images/profile.jpg";
---

<Layout title="My Social Links">
  <div class="flex flex-col items-center justify-center py-12 px-4">
    <div class="profile flex flex-col items-center mb-8">
      <Image
        class="w-32 h-32 rounded-full object-cover border-2 border-skin-accent"
        src={ProfileImg}
        alt="Profile Picture"
      />
      <h1 class="mt-4 mb-2 text-2xl font-bold">Uday Samsani</h1>
      <p class="text-center opacity-80 max-w-md mb-6">
        I am Uday Samsani, tech enthusiast currently cramming for my CPTS
        certification while still finding time to build cool things.
      </p>
    </div>

    <div class="links flex flex-col gap-4 w-full max-w-md">
      <a
        href="https://linkedin.com/in/uday-samsani"
        class="flex items-center justify-center gap-3 bg-skin-card p-4 rounded-lg font-medium transition-all hover:bg-skin-accent hover:text-white"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="icon-tabler"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path
            d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"
          ></path>
          <path d="M8 11l0 5"></path>
          <path d="M8 8l0 .01"></path>
          <path d="M12 16l0 -5"></path>
          <path d="M16 16v-3a2 2 0 0 0 -4 0"></path>
        </svg>
        LinkedIn
      </a>

      <a
        href="https://github.com/uday-samsani"
        class="flex items-center justify-center gap-3 bg-skin-card p-4 rounded-lg font-medium transition-all hover:bg-skin-accent hover:text-white"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="icon-tabler"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path
            d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
          ></path>
        </svg>
        GitHub
      </a>

      <a
        href="https://udaysamsani.com"
        class="flex items-center justify-center gap-3 bg-skin-card p-4 rounded-lg font-medium transition-all hover:bg-skin-accent hover:text-white"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="icon-tabler"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"></path>
          <path d="M3.6 9h16.8"></path>
          <path d="M3.6 15h16.8"></path>
          <path d="M11.5 3a17 17 0 0 0 0 18"></path>
          <path d="M12.5 3a17 17 0 0 1 0 18"></path>
        </svg>
        Blog
      </a>

      <a
        href="https://x.com/SamsaniUday"
        class="flex items-center justify-center gap-3 bg-skin-card p-4 rounded-lg font-medium transition-all hover:bg-skin-accent hover:text-white"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="icon-tabler"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M4 4l11.733 16h4.267l-11.733 -16z"></path>
          <path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"></path>
        </svg>
        Twitter/X
      </a>
    </div>

    <footer class="mt-12 text-center text-sm opacity-60">
      &copy; 2025 Uday Samsani • Made with ❤️
    </footer>
  </div>
</Layout>
